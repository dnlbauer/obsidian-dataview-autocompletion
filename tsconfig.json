{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": ["DOM", "ES5", "ES6", "ES7", "es2020.string"]
  },
  "include": ["**/*.ts"]
}
